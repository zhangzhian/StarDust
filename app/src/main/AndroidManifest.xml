<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zza.stardust">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".base.MApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_star_dust"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo_star_dust"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.ui.androidhero.CustomViewActivity" />
        <activity
            android:name=".app.ui.androidart.AndroidArtActivity"
            android:label="@string/title_activity_android_art"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".app.ui.androidhero.AndroidHeroActivity"
            android:label="@string/title_activity_android_hero"
            android:parentActivityName=".base.MActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zza.stardust.base.MActivity" />
        </activity>
        <activity android:name=".app.ui.TFTP.TFTPActivity" />
        <activity android:name=".app.ui.ConstraintLayout.ConstraintLayoutMoreActivity" />
        <activity android:name=".app.ui.ConstraintLayout.ConstraintLayoutActivity" />
        <activity android:name=".app.ui.OkHttp.OkHttpActivity" />
        <activity android:name=".home.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>