<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".app.ui.androidart.provider.ProviderActivity">

    <Button
        android:id="@+id/bt_insert_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入数据book" />

    <Button
        android:id="@+id/bt_insert_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入数据user" />

    <Button
        android:id="@+id/bt_query_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询数据book" />

    <Button
        android:id="@+id/bt_query_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询数据user" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp" />
</LinearLayout>